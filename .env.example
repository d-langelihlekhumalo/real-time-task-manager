# Real-Time Task Manager Environment Configuration

# ===========================
# DATABASE CONFIGURATION
# ===========================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=TaskManagerDB
MYSQL_USER=taskmanager
MYSQL_PASSWORD=your_secure_password_here

# ===========================
# BACKEND CONFIGURATION
# ===========================
# Database Connection (used by backend)
ConnectionStrings__DefaultConnection=Server=mysql;Database=TaskManagerDB;User=taskmanager;Password=your_secure_password_here;

# CORS Configuration (comma-separated origins)
Cors__AllowedOrigins=http://localhost:3000,https://localhost:3000

# Features
HealthChecks__Enabled=true
SwaggerUI__Enabled=false

# ===========================
# FRONTEND CONFIGURATION
# ===========================
VITE_API_BASE_URL=http://localhost:8080/api
VITE_SIGNALR_HUB_URL=http://localhost:8080/taskManagerHub

# ===========================
# DEPLOYMENT CONFIGURATION
# ===========================
# Set to 'production' for production deployment
ASPNETCORE_ENVIRONMENT=Production

# ===========================
# SECURITY NOTES
# ===========================
# 1. Change all default passwords before deploying to production
# 2. Use strong, unique passwords for database accounts
# 3. Consider using Docker secrets for sensitive data in production
# 4. Update CORS origins to match your production domain