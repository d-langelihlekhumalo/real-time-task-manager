# Example environment configuration
# Copy this file to .env.development and .env.production as needed

# API Base URL - Update this to match your backend server
VITE_API_BASE_URL=https://localhost:44355/api

# SignalR Hub URL - For real-time updates
VITE_SIGNALR_HUB_URL=https://localhost:44355/taskManagerHub

# Error logging endpoint (optional)
VITE_ERROR_LOGGING_ENDPOINT=https://your-logging-service.com/api/errors

# App version for error tracking
VITE_APP_VERSION=1.0.0

# Feature flags
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_ANALYTICS=false

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Alternative base URLs for different environments:
# Development HTTP: http://localhost:5090/api
# Development HTTPS: https://localhost:44355/api  
# IIS Express: http://localhost:56500/api